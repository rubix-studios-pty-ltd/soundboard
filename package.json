{
  "name": "soundboard",
  "version": "2.0.2",
  "description": "soundboard",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist && rimraf release",
    "start": "npm run tauri dev",
    "build": "npm run build:app && npm run build:css",
    "build:app": "node build.mjs",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/tailwind.css -o ./dist/styles.css",
    "dev": "npm run build && npm run serve",
    "serve": "serve dist -p 3000",
    "tauri": "tauri",
    "build:tauri": "npm run build && tauri build"
  },
  "author": "rubixstudios",
  "license": "ISC",
  "devDependencies": {
    "@tauri-apps/cli": "^2.4.0",
    "@types/node": "^22.13.16",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.2",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "tailwindcss": "^4.0.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@tailwindcss/cli": "^4.0.17",
    "@tailwindcss/postcss": "^4.0.17",
    "@tauri-apps/api": "^2.4.0",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.1.0",
    "tailwindcss-animated": "^2.0.0"
  }
}
